@model Group8_BrarPena.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<h3>Are you sure you want to delete this review?</h3>

<div>
    <h4>Review: @Model.ReviewerName</h4>
    <p>Rating: @Model.Rating</p>
    <p>Body: @Model.Body</p>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.ReviewId">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Reviews")" class="btn btn-secondary">Cancel</a>
</form>
